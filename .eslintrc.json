// .eslintrc.json
{
  "extends": ["standard", "airbnb"],
  "plugins": [],
  "env": {
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
    }],
    "semi": ["error", "always"],
    "linebreak-style": "off",
    "indent": "off"
  }
}
